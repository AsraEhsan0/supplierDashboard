@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">Welcome, Supplier!</h1>

<div class="row mb-4">
    <div class="col-md-6">
        <div class="stats-card blue-card">
            <h3>@ViewBag.TotalGroups</h3>
            <p>Total Groups</p>
        </div>
    </div>
    <div class="col-md-6">
        <div class="stats-card green-card">
            <h3>@ViewBag.AvailableGroups</h3>
            <p>Available Groups</p>
        </div>
    </div>
</div>

<div class="table-container">
    <h3 class="mb-3">Recent Bookings</h3>
    <div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Group Name</th>
                <th>Agent ID</th>
                <th>Agency Name</th>
                <th>Passenger Name</th>
                <th>PNR</th>
                <th>Segment</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (dynamic booking in ViewBag.RecentBookings)
            {
                <tr>
                    <td>@booking.GroupName</td>
                    <td>@booking.AgentId</td>
                    <td>@booking.AgencyName</td>
                    <td>@booking.PassengerName</td>
                    <td>@booking.PNR</td>
                    <td>@booking.Segment</td>
                    <td>
                        <button class="btn btn-primary btn-sm btn-view">View Booking</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</div>

<div class="table-container">

    <h3 class="mb-3">Active Groups</h3>
    <div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Group Name</th>
                <th>Flight No</th>
                <th>PNR</th>
                <th>Seats Sold</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (dynamic group in ViewBag.ActiveGroups)
            {
                <tr>
                    <td>@group.GroupName</td>
                    <td>@group.FlightNo</td>
                    <td>@group.PNR</td>
                    <td>@group.SeatsSold</td>
                    <td>
                        <button class="btn btn-primary btn-sm btn-view">View Details</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</div>